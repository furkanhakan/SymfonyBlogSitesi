<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://cdn.ckeditor.com/ckeditor5/15.0.0/classic/ckeditor.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:300, 400,700" rel="stylesheet">

    <link rel="stylesheet" href="{{ asset('css/animate.css') }}">
    <link rel="stylesheet" href="{{ asset('css/owl.carousel.min.css') }}">

    <link rel="stylesheet" href="{{ asset('fonts/ionicons/css/ionicons.min.css') }}">
    <link rel="stylesheet" href="{{ asset('fonts/fontawesome/css/font-awesome.min.css') }}">
    <link rel="stylesheet" href="{{ asset('fonts/flaticon/font/flaticon.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    <!-- Theme Style -->
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">

    <link rel="stylesheet" href="{{ asset('css/yorumlar.css') }}">


</head>
<body>
<!-- Header -->
{{ include('messages.html.twig') }}
<header role="banner">
    <div class="top-bar">
        <div class="container">
            <div class="row">
                <div class="col-9 social">
                    <a href="https://twitter.com/_furkanhakan"><span class="fa fa-twitter"></span></a>
                    <a href="https://www.facebook.com/furkanhakann"><span class="fa fa-facebook"></span></a>
                    <a href="https://www.instagram.com/furkan.hakann/"><span class="fa fa-instagram"></span></a>
                    <a href="https://github.com/furkanhakan"><span class="fa fa-github-square"></span></a>
                    <a href="https://www.linkedin.com/in/furkanhakan/"><span class="fa fa-linkedin"></span></a>
                </div>
                <div class="col-3 search-top">
                    <!-- <a href="#"><span class="fa fa-search"></span></a> -->
                    <form action="#" class="search-top-form">
                        <span class="icon fa fa-search"></span>
                        <input type="text" id="s" placeholder="Ara...">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container logo-wrap">
        <div class="row pt-5">
            <div class="col-12 text-center">
                <a class="absolute-toggle d-block d-md-none" data-toggle="collapse" href="#navbarMenu" role="button" aria-expanded="false" aria-controls="navbarMenu"><span class="burger-lines"></span></a>
                <h1 class="site-logo"><a href="{{ path('anasayfa') }}">FURKAN HAKAN</a></h1>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-md  navbar-light bg-light">
        <div class="container">

            <script>
                window.onload = function () {
                    var path = window.location.pathname.split('/')[1];
                    if (path == 'kategori'){
                        path = window.location.pathname.split('/')[2];
                        document.getElementById(path).setAttribute('class','dropdown-item active');
                    }
                    else if(path == 'post')
                    {}
                    else
                        document.getElementById(path).setAttribute('class','nav-link active');
                };

            </script>
            <div class="collapse navbar-collapse" id="navbarMenu">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" id="anasayfa" href="{{ path('anasayfa') }}">Ana Sayfa</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="" id="dropdown05" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Kategoriler</a>
                        <div class="dropdown-menu" aria-labelledby="dropdown05">
                            {% for kategori in kategoriler %}
                                <a class="dropdown-item" id="{{ kategori.kategori|replace({' ':'-'}) }}" href="{{ path('kategori', {kategori:kategori.kategori|replace({' ':'-'}),sayfa:1}) }}">{{kategori.kategori}}</a>
                            {% endfor %}
                        </div>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="hakkimda" href="{{ path('hakkimda') }}">Hakkımda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="iletisim" href="{{ path('iletisim') }}">İletişim</a>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('gonderi_index') }}">Admin Paneli</a>
                        </li>
                    {% endif %}
                </ul>

            </div>
        </div>
    </nav>
</header>
<!-- END header -->

{% block slider %}{% endblock %}

<!-- main-content -->
<section class="site-section py-sm mt-5">
    <div class="container">
        <div class="row blog-entries">
            <div class="col-md-12 col-lg-8 main-content">
                {% block main_content %} {% endblock %}
            </div>
            <!-- END main-content -->

            <!-- popular post -->
            <div class="col-md-12 col-lg-4 sidebar">
                <!-- END sidebar-box -->
                <div class="sidebar-box">
                    <div class="bio text-center">
                        <img src="{{ asset('images/bio.jpg') }}" alt="Image Placeholder" class="img-fluid">
                        <div class="bio-body">
                            <h2>Furkan Hakan</h2>
                            <p>Merhaba <span id="saat"></span>, Ben Furkan Hakan. Bu blog'un sahibiyim :). Umarım yazılarım size bir fayda sağlıyordur. Beni tanımak istersen aşağıdan inceleyebilirsin.</p>
                            <script>
                                var saat = new Date().getHours();
                                if ((saat > 17  && saat < 24) || saat < 6){
                                    document.getElementById('saat').innerText = 'İyi Akşamlar';
                                }
                                if ((saat > 5 && saat < 18 )){
                                    document.getElementById('saat').innerText = 'İyi Günler';
                                }
                            </script>
                            <p><a href="{{ path('hakkimda') }}" class="btn btn-primary btn-sm">Hakkımda</a></p>
                            <p class="social">
                                <a href="https://www.linkedin.com/in/furkanhakan/" class="p-2"><span class="fa fa-linkedin"></span></a>
                                <a href="https://github.com/furkanhakan" class="p-2"><span class="fa fa-github"></span></a>
                                <a href="https://twitter.com/_furkanhakan" class="p-2"><span class="fa fa-twitter"></span></a>
                                <a href="https://www.instagram.com/furkan.hakann/" class="p-2"><span class="fa fa-instagram"></span></a>
                            </p>
                        </div>
                    </div>
                </div>
                <!-- END sidebar-box -->
                <div class="sidebar-box">
                    <h3 class="heading">Popüler Yazılar</h3>
                    <div class="post-entry-sidebar">
                        <ul>
                            {% for gonderi in gonderiler %}
                                {% for yorum in populer %}
                                    {% if gonderi.id == yorum.yorum %}
                                        <li>
                                            <a href="{{ path('gonderidetay',{'gonderibasligi':gonderi.gonderibasligi|replace({' ':'-'})}) }}">
                                                <img src="{{ asset('images') }}/{{ gonderi.kapak }}" alt="Image placeholder" class="mr-4">
                                                <div class="text">
                                                    <h4>{{gonderi.gonderibasligi}}</h4>
                                                    <div class="post-meta">
                                                        <span class="mr-2">{{gonderi.gonderitarihi|date('d-m-Y')}}</span> &bullet;
                                                        <span class="ml-2"><span class="fa fa-comments"></span> {{ yorum.sayi }}</span>
                                                    </div>
                                                </div>
                                            </a>
                                        </li>
                                    {% endif %}
                                {% endfor %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <!-- END sidebar-box -->

                <div class="sidebar-box">
                    <h3 class="heading">Kategoriler</h3>
                    <ul class="categories">
                        {% for kategori in kategoriler %}
                            <li><a href="{{ path('kategori', {kategori:kategori.kategori|replace({' ':'-'}),sayfa:1})  }}">{{kategori.kategori}} <span>{{ kategori.sayi }}</span></a></li>

                        {% endfor %}
                    </ul>
                </div>
                <!-- END sidebar-box -->
<!--
                <div class="sidebar-box">
                    <h3 class="heading">Tags</h3>
                    <ul class="tags">
                        <li><a href="#">Travel</a></li>
                        <li><a href="#">Adventure</a></li>
